{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "dist",

        "moduleResolution": "node",
        "esModuleInterop": true,

        "types": ["node", "jest"],

        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": ["types/**/*.d.ts", "packages/**/*.ts"],
    "exclude": ["packages/**/*.test.ts"]
}
